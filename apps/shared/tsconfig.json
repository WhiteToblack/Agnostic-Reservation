{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "jsx": "react-native",
    "baseUrl": ".",
    "paths": {
      "react": [
        "../mobile/node_modules/@types/react/index",
        "../web/node_modules/@types/react/index"
      ],
      "react/jsx-runtime": [
        "../mobile/node_modules/@types/react/jsx-runtime",
        "../web/node_modules/@types/react/jsx-runtime"
      ],
      "react-native": [
        "../mobile/node_modules/react-native/types/index"
      ],
      "react-native/*": [
        "../mobile/node_modules/react-native/types/*",
        "../mobile/node_modules/react-native/Libraries/*"
      ]
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx"
  ]
}